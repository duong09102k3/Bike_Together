<div class="containerProject">
    <div class="contentBlock">
        <div class="contentBlock__heading">
            <a asp-controller="Admin" asp-action="BikeManage">
                <i class="fa fa-list"></i>
                Danh sách xe
            </a>
            <a style="color: #049363; font-weight: 600; border-bottom: 3px solid #049363">
                <i class="fa fa-star"></i>
                Phòng đang chờ được xem
            </a>
            <a asp-controller="User" asp-action="UserManage">
                <i class="fa fa-user-friends"></i>
                Người dùng
            </a>
        </div>
        <div class="contentBlock__container">
            <div class="contentBlock__content2">
                @*Container content*@
            </div>
        </div>
    </div>
</div>

<!-- Modal CRUD-->
<div class="modal fade" id="myModalCRUD" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <form id="form">
                    <div class="form-group inputBlock">
                        <label for="CustomerName">Tên khách</label>
                        <input type="text" class="form-control inputContent" id="CustomerName" name="Customer" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="CustomerPhone">Số điện thoại khách</label>
                        <input type="text" class="form-control inputContent" id="CustomerPhone" name="CustomerPhone" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="CustomerEmail">Email khách</label>
                        <input type="text" class="form-control inputContent" id="CustomerEmail" name="CustomerEmail" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Note">Ghi chú</label>
                        <input type="text" class="form-control inputContent" id="Note" name="Note" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="OwnerName">Tên chủ sở hữu</label>
                        <input type="text" class="form-control inputContent" id="OwnerName" name="OwnerName" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="OwnerPhone">Số điện thoại</label>
                        <input type="text" class="form-control inputContent" id="OwnerPhone" name="OwnerPhone" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="HouseTitle">Tiêu đề</label>
                        <input type="text" class="form-control inputContent" id="NameBike" name="HouseTitle" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="LocationName">Nhóm địa bàn</label>
                        <input type="text" class="form-control inputContent" id="LocationName" name="LocationName" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Address">Địa chỉ chi tiết:</label>
                        <input type="text" class="form-control inputContent" id="Address" name="Address" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Price">Giá</label>
                        <input type="text" class="form-control inputContent" id="Price" name="Price" placeholder="" />
                    </div>
                    <div class="form-group inputBlock">
                        <label for="Desciption">Mô tả</label>
                        <input type="text" class="form-control inputContent" id="Description" name="Desciption" placeholder="" />
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display: none">Đã xử lý</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>

<script src="~/js/bookingBikes.js"></script>